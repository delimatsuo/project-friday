rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidAudioType() {
      return request.resource.contentType.matches('audio/.*');
    }
    
    function isValidFileSize(maxSize) {
      return request.resource.size <= maxSize;
    }
    
    // User profile images
    match /users/{userId}/profile/{filename} {
      allow read: if true; // Public read for profile images
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidImageType() && 
                     isValidFileSize(5 * 1024 * 1024); // 5MB max
    }
    
    // Call recordings - private to user
    match /users/{userId}/recordings/{callId}/{filename} {
      allow read, write: if isAuthenticated() && 
                           isOwner(userId) && 
                           isValidAudioType() && 
                           isValidFileSize(100 * 1024 * 1024); // 100MB max for recordings
    }
    
    // Call transcripts and documents
    match /users/{userId}/documents/{callId}/{filename} {
      allow read, write: if isAuthenticated() && 
                           isOwner(userId) && 
                           isValidFileSize(10 * 1024 * 1024); // 10MB max for documents
    }
    
    // Temporary uploads for processing
    match /temp/{userId}/{filename} {
      allow read, write: if isAuthenticated() && 
                           isOwner(userId) && 
                           isValidFileSize(100 * 1024 * 1024); // 100MB max
      
      // Auto-delete after 24 hours (handled by Cloud Functions)
    }
    
    // User data exports
    match /exports/{userId}/{filename} {
      allow read: if isAuthenticated() && 
                    isOwner(userId);
      
      // Only Cloud Functions can write exports
      allow write: if false;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}